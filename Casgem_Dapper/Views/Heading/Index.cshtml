@model List<Casgem_Dapper.DAL.Headings>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.HeadingID</td>
            <td>@item.HeadingName</td>
            <td>@item.HeadingStatus</td>
            <td><a href="/Heading/DeleteHeading/@item.HeadingID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Heading/UpdateHeading/@item.HeadingID" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>
    <a href="/Heading/AddHeading" class="btn btn-success">Ekle</a>
</div>